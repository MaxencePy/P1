#:import Gradient main.Gradient
MainWidget:
<MenuWidget>:
	canvas.before:
		Color:
			rgba: .05, 0, .1, .4
		Rectangle:
			size: self.size
	#Label:
		#text: root.parent.menu_title
		#font_size: dp(50)
		#font_name: "fonts/Sackers-Gothic-Std-Light.ttf"
		#pos_hint: {"center_x": .5, "center_y": .6}
	Button:
		text: root.parent.menu_button_title
		#font_size: dp(25)
		#font_name: "fonts/Eurostile.ttf"
		pos_hint: {"center_x": .5, "center_y": .3}
		size_hint: .2, .15
		on_press: root.parent.on_menu_button_pressed()
		background_normal: ''
		background_color: .6, .1, .3, .8

<MainWidget>:
	menu_widget: menu_widget
	perspective_point_x: self.width/2
	perspective_point_y: self.height*0.75
	canvas.before:
		Color:
			rgb: 1, 1, 1
		Rectangle:
			#:set s1 1
			pos: 0, root.perspective_point_y-s1
			size: root.width, root.height-root.perspective_point_y+s1
	        texture: Gradient.vertical((.2, .1, .4, 1), (.9, .2, .1, 1))



		Color:
			rgb: .9, .2, .1
	    Ellipse:
			#:set s2 150
	        pos: root.perspective_point_x-s2/2, root.perspective_point_y-s2/2
	        size: s2, s2
		Color:
			rgb: 1, 1, 1
		Rectangle:
			size: root.width, root.perspective_point_y
	        texture: Gradient.vertical((.3, .0, .3, 1), (.05, .0, .07, 1))


	MenuWidget:
		id: menu_widget