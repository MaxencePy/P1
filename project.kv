#: import menu menu
#:import Gradient main.Gradient
MainWidget:


<MainWidget>:
	menu_widget: menu_widget
	perspective_point_x: self.width/2
	perspective_point_y: self.height*0.9
	canvas.before:
		Color:
			rgb: 1, 1, 1
		Rectangle:
			#:set s1 1
			pos: 0, root.perspective_point_y-s1
			size: root.width, root.height-root.perspective_point_y+s1
	        texture: Gradient.vertical((.2, .1, .4, 1), (.8, .1, .2, 1))



		Color:
			rgb: .9, .2, .15
	    Ellipse:
		#:set s2 dp(150)
	        pos: root.perspective_point_x-s2/2, (root.height*.75+root.perspective_point_y)/2-s2/2
	        size: s2, s2
		Color:
			rgb: 1, 1, 1
		Rectangle:
			size: root.width, root.perspective_point_y
	        texture: Gradient.vertical((.3, .0, .3, 1), (.05, .0, .07, 1))


    Label:
        #:set s3 dp(40)
        pos: s3/4.7*(len(str(root.score))+1)-self.width/2, -s3/2+self.height/2
        text: len(str(root.score))*"8"
        font_size: s3
        font_name: 'Lcd.ttf'
        color: .5, 1, 1, .2
    Label:
        #:set s3 dp(40)
        pos: s3/4.7*(len(str(root.score))+1)-self.width/2, -s3/2+self.height/2
        text: str(root.score)
        font_size: s3
        font_name: 'Lcd.ttf'
        color: .5, 1, 1, 1


	MenuWidget:
		id: menu_widget

<Point>:
    x: 100
    y: 200



